# ==============================================================
# üåê DATABASE CONFIGURATION (TimescaleDB via Docker)
# ==============================================================

# Use localhost while backend runs locally
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/futures

# Optional alternative DSN variable
# DB_DSN=postgresql://postgres:postgres@localhost:5432/futures

# Connection pool sizes (safe defaults)
DB_POOL_MIN=1
DB_POOL_MAX=10

# ==============================================================
# ‚öôÔ∏è APP CONFIGURATION
# ==============================================================

# Core trading symbols (expandable to 50+ later)
SYMBOLS=BTCUSDT,ETHUSDT,SOLUSDT

# Data collection interval (seconds)
AUTO_SCRAPE_INTERVAL=60

# Mode flags
TEST_MODE=false
DEV_MODE=false

# Logging level
LOG_LEVEL=INFO

# WebSocket performance tuning
MAX_STREAMS_PER_CONN=50

# ==============================================================
# üîÑ CONTINUITY / HEALTH TRACKING
# ==============================================================

# Continuity framework file
CONTINUITY_DOCS=docs/continuity_state.json

# Current dev phase
PHASE=P3.7 - TimescaleDB Integration + 1m Snapshots

# ==============================================================
# ‚ö° FRONTEND CONNECTIONS
# ==============================================================

# Base API endpoint (for frontend)
VITE_API_BASE=http://localhost:5000/api

# WebSocket endpoint (backend)
VITE_WS_URL=http://localhost:5000

